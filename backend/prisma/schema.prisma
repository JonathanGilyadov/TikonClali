datasource db {
  provider = "sqlite"
  url      = "file:./tikon.db"
}

generator client {
  provider = "prisma-client-js"
}

model Request {
  id             Int      @id @default(autoincrement())
  name           String
  purpose        String
  notes          String?
  chapterIndices String // Stored as JSON string
  progress       String // Stored as JSON string
  cycleCount     Int      @default(0)
  createdAt      DateTime @default(now())

  chapters Chapter[] @relation("RequestChapters") // ðŸ‘ˆ reverse relation
}

model Chapter {
  id        Int       @id @default(autoincrement())
  number    Int
  status    String
  lockedBy  String?
  lockedAt  DateTime?
  requestId Int
  request   Request   @relation("RequestChapters", fields: [requestId], references: [id])
}

model ReadCounter {
  id     Int    @id @default(1)
  count  Int    @default(0)
}